
<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name%>
    <%= @friend.last_name%>
  </h1>
  <p class="lead">
    <%= @friend.emial%> | 
    <%= @friend.phone%> |
    <%= @friend.twitter%> 
  </p>
  <br/>  

  <p class="lead">
    <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary" %> 
    <%= link_to "Delete this friend", @friend, method: :delete, class:"btn btn-outline-danger" %>
    <%= link_to "Back to friends", friends_path, class: "btn btn-dark" %>
  </p>
</div>
